{
  "name": "tokBot",
  "entrypoint": "python -m tokbot",
  "description": "Modular automation agent with pluggable integrations.",
  "commands": {
    "create_venv": "python -m venv .venv && source .venv/bin/activate",
    "install_dev": "pip install -r requirements/dev.txt",
    "list_agents": "python -m tokbot list",
    "run_echo": "python -m tokbot run echo --message 'Hello'",
    "run_upper": "python -m tokbot run uppercase --message 'Hello'",
    "run_with_env": "python -m tokbot --env-file .env run --message 'Ping'",
    "tests": "pytest"
  }
}
